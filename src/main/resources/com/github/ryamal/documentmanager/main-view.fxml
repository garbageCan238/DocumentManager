<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<HBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
      xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.github.ryamal.documentmanager.controllers.MainViewController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <ListView prefHeight="400.0" prefWidth="400.0" HBox.hgrow="ALWAYS" fx:id="documentsListView"/>
    <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="183.0">
        <HBox.margin>
            <Insets/>
        </HBox.margin>
        <Button minWidth="110.0" mnemonicParsing="false" text="Накладная" fx:id="invoiceButton">
            <VBox.margin>
                <Insets bottom="15.0"/>
            </VBox.margin>
        </Button>
        <Button minWidth="110.0" mnemonicParsing="false" text="Платежка" fx:id="paymentRequestButton">
            <VBox.margin>
                <Insets bottom="15.0"/>
            </VBox.margin>
        </Button>
        <Button minWidth="110.0" mnemonicParsing="false" text="Заявка на оплату" fx:id="paymentSlipButton">
            <VBox.margin>
                <Insets bottom="15.0"/>
            </VBox.margin>
        </Button>
        <Button minWidth="110.0" mnemonicParsing="false" text="Сохранить">
            <VBox.margin>
                <Insets bottom="15.0"/>
            </VBox.margin>
        </Button>
        <Button minWidth="110.0" mnemonicParsing="false" text="Загрузить">
            <VBox.margin>
                <Insets bottom="15.0"/>
            </VBox.margin>
        </Button>
        <Button minWidth="110.0" mnemonicParsing="false" text="Просмотр">
            <VBox.margin>
                <Insets bottom="15.0"/>
            </VBox.margin>
        </Button>
        <Button minWidth="110.0" mnemonicParsing="false" text="Удалить">
            <VBox.margin>
                <Insets bottom="15.0"/>
            </VBox.margin>
        </Button>
        <VBox alignment="BOTTOM_CENTER" prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
            <Button minWidth="110.0" mnemonicParsing="false" text="Выход">
                <VBox.margin>
                    <Insets/>
                </VBox.margin>
            </Button>
        </VBox>
    </VBox>
</HBox>
